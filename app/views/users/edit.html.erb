<% provide(:title, "Edit profile") %>

			<div class="span9">
				
				<h1 class="page-title">
					<i class="icon-th-large"></i>
					User Account					
				</h1>

        <%= render 'shared/error_messages' %>
				
				
				<div class="row">
					
					<div class="span9">
						<div class="widget">
							
							<div class="widget-header">
								<h3>Basic Information</h3>
							</div> <!-- /widget-header -->
									
							<div class="widget-content">
								
								
								
								<div class="tabbable">
						<ul class="nav nav-tabs">
						  <li class="active">
						    <a href="#1" data-toggle="tab">Profile</a>
						  </li>
              <!--<li><a href="#2" data-toggle="tab">Settings</a></li>//-->
						</ul>
						
						<br>
						
							<div class="tab-content">
								<div class="tab-pane active" id="1">
                <%= form_for(@user, html: { class: "form-horizontal"}) do |f| %>
									<fieldset>
										
										
										<div class="control-group">											
                      <%= f.label :name, class: "control-label" %>
											<div class="controls">
                        <%= f.text_field :name, class: "input-medium" %>
											</div> <!-- /controls -->				
										</div> <!-- /control-group -->
										
										
										<div class="control-group">											
                      <%= f.label :email, class: "control-label" %>
											<div class="controls">
                        <%= f.text_field :email, class: "input-large" %>
											</div> <!-- /controls -->				
										</div> <!-- /control-group -->
										
										
										<br /><br />
										
										<div class="control-group">											
                      <%= f.label :password, class: "control-label" %>
											<div class="controls">
                        <%= f.password_field :password, class: "input-medium" %>
											</div> <!-- /controls -->				
										</div> <!-- /control-group -->
										
										
										<div class="control-group">											
                      <%= f.label :password_confirmation, "Confirm Password", class: "control-label" %>
											<div class="controls">
                        <%= f.password_field :password_confirmation, class: "input-medium" %>
											</div> <!-- /controls -->				
										</div> <!-- /control-group -->
										
									  
                    <div class="control-group">
                      <label class="control-label">Gravatar</label>
                      <div class="controls">
                        <%= gravatar_for @user %>
                        <br/>
                        <a href="http://gravatar.com/emails">change</a>
                      </div>
                    </div>
											
											<br />
										
											
										<div class="form-actions">
                      <%= f.button "Save", type: "submit", class: "btn btn-primary" %>
											<button class="btn">Cancel</button>
										</div> <!-- /form-actions -->
									</fieldset>
								</form>
								</div>
								
                  <% end %>
								
							</div>
						  
						  
						</div>
								
								
								
								
								
								
								
								
							</div> <!-- /widget-content -->
							
						</div> <!-- /widget -->
						
					</div> <!-- /span9 -->
					
				</div> <!-- /row -->
				
				
				
				
				
				
				
				
				
			</div> <!-- /span9 -->
