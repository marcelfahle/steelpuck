<% provide(:title, 'All users') %>

<div class="span9">
  <h1 class="page-title">
    <i class="icon-eye-open"></i>
    Administration
  </h1>

  <div class="widget widget-table">

    <div class="widget-header">
      <i class="icon-user"></i>
      <h3>All users</h3>
      <div class="pull-right">
        <%= will_paginate @users %>
      </div>
    </div>

    <div class="widget-content widget-flat">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <td>#</td>
            <td>Name</td>
            <td>Videos</td>
            <td>Videoviews</td>
            <td>Actions</td>
          </tr>
        </thead>

        <tbody>
          <%= render @users %>
        </tbody>
      </table>


    </div>
    <div class="widget-footer">
      <div class="pull-right">
        <%= will_paginate @users %>
      </div>
    </div>
  </div>

</div>
